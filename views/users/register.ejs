<% layout('layouts/boilerplate')%>
  <div class="container">
    <h1>Register</h1>
    <form action="/register" method="POST" class="authForm">
      <div class="form-item">
        <label for="username">Username</label>
        <input type="text" name="user[username]" id="username" placeholder="Enter your username">
      </div>
      <div class="form-item">
        <label for="email">Email</label>
        <input type="text" name="user[email]"" id=" email" placeholder="Enter your email">
      </div>
      <div class="form-item">
        <label for="password">Password</label>
        <input type="password" name="user[password]"" id=" password" placeholder="Enter your password">
      </div>
      <button>Submit</button>
    </form>
  </div>